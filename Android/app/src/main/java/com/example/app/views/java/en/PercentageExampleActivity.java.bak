package com.example.app.views.java.en;

import android.os.Bundle;
import androidx.appcompat.app.AppCompatActivity;
import androidx.databinding.DataBindingUtil;
import com.appdimens.dynamic.code.AppDimens;
import com.example.app.R;
import com.example.app.databinding.ActivityPercentageExampleBinding;

public class PercentageExampleActivity extends AppCompatActivity {
    private ActivityPercentageExampleBinding binding;
    @Override protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        binding = DataBindingUtil.setContentView(this, R.layout.activity_percentage_example);
        binding.setBaseValue(48f);
        float dp = AppDimens.from(48f).percentage().toDp(getResources());
        binding.getTvResult().setText("PERCENTAGE: 48dp â†’ " + (int)dp + "dp");
    }
}

