package com.example.app.views.java.pt;

import android.view.View;
import android.widget.TextView;
import androidx.databinding.BindingAdapter;
import com.appdimens.dynamic.code.AppDimens;

public class DimensBindingAdapters {

    // ESTRATÉGIA DEFAULT
    @BindingAdapter("app:defaultWidthDp")
    public static void setDefaultWidth(View view, float dpValue) {
        float pxValue = AppDimens.from(dpValue).useDefault(true, null).toDp(view.getResources());
        float px = android.util.TypedValue.applyDimension(android.util.TypedValue.COMPLEX_UNIT_DIP, pxValue, view.getResources().getDisplayMetrics());
        view.getLayoutParams().width = (int) px;
        view.requestLayout();
    }

    @BindingAdapter("app:defaultHeightDp")
    public static void setDefaultHeight(View view, float dpValue) {
        float pxValue = AppDimens.from(dpValue).useDefault(true, null).toDp(view.getResources());
        float px = android.util.TypedValue.applyDimension(android.util.TypedValue.COMPLEX_UNIT_DIP, pxValue, view.getResources().getDisplayMetrics());
        view.getLayoutParams().height = (int) px;
        view.requestLayout();
    }

    @BindingAdapter("app:defaultTextSizeSp")
    public static void setDefaultTextSize(TextView textView, float spValue) {
        float adjustedSp = AppDimens.from(spValue).useDefault(true, null).toSp(textView.getResources());
        textView.setTextSize(android.util.TypedValue.COMPLEX_UNIT_SP, adjustedSp);
    }

