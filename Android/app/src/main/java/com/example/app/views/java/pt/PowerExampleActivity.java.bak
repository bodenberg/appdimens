package com.example.app.views.java.pt;

import android.os.Bundle;
import androidx.appcompat.app.AppCompatActivity;
import androidx.databinding.DataBindingUtil;
import com.appdimens.dynamic.code.AppDimens;
import com.example.app.R;
import com.example.app.databinding.ActivityPowerExampleBinding;

public class PowerExampleActivity extends AppCompatActivity {
    @Override protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        ActivityPowerExampleBinding binding = DataBindingUtil.setContentView(this, R.layout.activity_power_example);
        binding.setBaseValue(48f);
        float dp = AppDimens.from(48f).power(0.75f).toDp(getResources());
        binding.getTvResult().setText("POWER: 48dp â†’ " + (int)dp + "dp");
    }
}

