<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <data><variable name="baseValue" type="Float" /></data>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="FILL Strategy (Cover)" android:textSize="20sp" android:textStyle="bold" android:paddingBottom="16dp"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Game cover - fills screen" android:paddingBottom="8dp"/>
            <View android:id="@+id/demo_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="#3F51B5" app:fillWidthDp="@{baseValue}" app:fillHeightDp="@{baseValue}"/>
            <TextView android:id="@+id/tv_result" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Fill text" app:fillTextSizeSp="@{16f}"/>
        </LinearLayout>
    </ScrollView>
</layout>

